<div class="content pwdForm">
  <h2 class="title">Forgot password</h2>

  <form class="form-horizontal">
    <div class="codeWrap">
      <div class="form-group codeVerify">
        <label for="" class="col-sm-3 control-label">verification method</label>
        <div class="col-sm-8">
          <div class="row">
            <div class="col-sm-8">
              <select id="emailAdr" class="form-control" placeholder="Email">
                
              </select>
            </div>
            <div class="col-sm-4">
              <input type="button" class="btn btn-warning" id="sendEmailBnt" value="Send OTP">
            </div>
          </div>
        </div>
      </div>
      <div class="form-group codeVerify">
        <div class="col-sm-offset-3 col-sm-8">
          <div class="row">
            <div class="col-sm-5">
              <input type="text" name="verifyCode" class="form-control" placeholder="OTP" autocomplete="off">
            </div>
          </div>
          <p class="checkError hidden">Please enter a valid code</p>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="" class="col-sm-3 control-label">New password</label>
      <div class="col-sm-4">
        <input type="password" class="form-control" id="newPwd" maxlength="32" placeholder="New password" autocomplete="off">
        <p class="checkError hidden">Please enter password (6 - 32 characters)</p>
      </div>
    </div>
    <div class="form-group">
      <label for="" class="col-sm-3 control-label">Confirm Password</label>
      <div class="col-sm-4">
        <input type="password" class="form-control" id="conPwd" name="newPassword" maxlength="32" placeholder="Confirm password" autocomplete="off">
        <p class="checkError hidden">Passwords do not match</p>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-4">
        <button type="button" class="btn btn-warning btn-md" id="setPwd">Submit</button>
      </div>
    </div>
  </form>
</div>