@import "../../../public-resource/less/basedir/_variables.less";
body{
	background: #fff;
}
.TipsMsg{
	position: absolute;
	top: 70px;
	left: 50%;
	width: 180px;
	padding: 10px;
	font-size: 12px;
	color: white;
	background: rgba(0 , 0, 0, 0.8);
	border-radius: 4px;
	display: none;
}
.banner{
	position: relative;
	width:100%;
	height: 400px;
	overflow: hidden;
	.banImg{
		position: absolute;
		left:50%;
		transform: translateX(-50%);
	}
}
.content{
	position: relative;
	// top:-100px;
}
// p{
// 	color:@gray-dark; 
// 	font-size: 14px;
// }
.line2{
	display: inline-block;
	width:200px;
	height:1px;
	background-color: #ffad3d; 
}
.caption{
	background-color: #fff;
	margin-bottom: 20px;
	padding-top: 10px;
	.berif{
		width: 1120px;
		margin:0px auto 30px;
		font-size: 18px;
		color: #666;
		.title1{
			line-height: 27px;
			margin-bottom: 10px;
		}
		.title2{
			font-size: 30px;
			color: #333333;
			margin: 20px 0px;
		}
		.title_3{
			line-height: 27px;
			font-size: 16px;
			margin-bottom: 15px;
			font-style: italic;
			span{
				color: red;
			}
		}
		.img1{
			margin-bottom: 20px;
		}
		.tier{
			font-size: 12px;
			height: 20px;
			line-height: 20px;
			span{
				color: #ec4b04;
			}
		}
		.rewards{
			margin-bottom: 5px;
			font-size: 16px;
			.title{
				margin-bottom: 10px;
				font-size: 18px;
				color: #333;
			}
			ul{
				li{
					line-height: 24px;
					p{
						.re_tier{
							color: #333;
						}
						a{
							color: #0b9d78;
							text-decoration: underline;
							font-weight: 700;
						}
					}
				}
			}
		}
		table{
			border: 1px solid #fff;
			color: #333;
			th{
				border: 1px solid #fff;
				text-align: center;
				height: 50px;
				line-height: 32px;
				font-size: 18px;
			}
			td{
				border: 1px solid #fff;
				height: 50px;
				line-height: 32px;
			}
			thead{
				background: #f4b692;
				tr{
					th{
						border-bottom: 3px solid #fff;
						
						&:nth-child(1){
							width: 210px;
						}
					}
				}
			}
			tbody{
				background: #fbe7db;
				tr{
					td{
						padding-left: 30px;
						font-size: 18px;
						&:nth-child(1){
							padding: 8px;
							text-align: center;
						}
					}
				}
			}
		}
		.toSumIt{
			li{
				width: 270px;
				height: 140px;
				text-align: center;
				background: #ebf7f4;
				margin-right: 13px;
				padding: 15px;
				float: left;
				&:last-child{
					margin-right: 0px;
				}
				p{
					&:nth-child(1){
						font-size: 60px;
						color: #ec4b04;
						font-weight: 700;
						font-style: italic;
					}
					&:nth-child(2){
						font-size: 18px;
					}
				}
			}
		}
		.title3{
			color: #333;
			margin: 40px 0px 20px;
		}
	}
}
.category{
	margin: 20px 0px;
	.container{
		padding: 0px;
	}
	.goRefferactive{
		text-align: center;
		line-height: 55px;
		font-size: 24px;
		position: relative;
		a{
			color: #f06745;
		}
		.loadApp1{
			position: absolute;
			right: 140px;
			top: 10px;
			width: 120px;
			height: 36px;
			background: url('./images/google-play.png') no-repeat;
		}
		.loadApp2{
			position: absolute;
			right: 0;
			top:10px;
			width: 120px;
			height: 36px;
			background: url('./images/app-play.png') no-repeat;
		}
	}
	h3.title{
		padding:40px 0 30px;
	}
	.refways{
		margin:0px 0px 10px;
		width: 100%;
		height: 80px;
		text-align: center;
		border: 1px solid #ccc;
		background: #f9f8f8;
		position: relative;
		.form-inline{
			width: 931px;
			margin: auto;
			div{
				float: left;
				height: 80px;
				width: 320px;
				text-align: left;
				line-height: 26px;	
				color: #666;
				font-size: 14px;
			}
			.form-group_2{
				width: 220px;
				.webShareText_login{
					position: relative;
					pointer-events: none;
					&::before{
						content: '';
						width: 14px;
						height: 14px;
						background: url(./images/copy2.png) no-repeat;
						background-size: 100%;
						position: absolute;
						right: -25px;
						top: 0px;
						pointer-events: auto;
						cursor: pointer;
					}
				}
			}
		}
		.checkError{
			position: absolute;
			left: 140px;
			top: 57px;
			height: 20px;
			line-height: 20px;
		}
		input{
			width: 297px;
			height: 41px;
			border-radius: 0px;
			background: #f9f8f8;
			margin-right: 33px;
		}
		.shareBtn{
			float: left;
			width: 155px;
			height: 36px;
			background: url('./images/submit.png') no-repeat;
			vertical-align: middle;
			margin:28px 53px 0 0 ;
			cursor: pointer;
			position: relative;
			&::before{
				content: '';
				width: 0;
				height: 46px;
				border-left: 2px solid #ccc;
				position: absolute;
				right: -28px;
				top: -5px;
			}
		}
		.webShare{
			display: inline-block;
			width: 183px;
			height: 36px;
			cursor: pointer;
			margin:2px 53px 0 0;
			background: url('./images/whatsapp.png') no-repeat;
		}	
		.facebook{
			float: left;
			width: 183px;
			height: 36px;
			cursor: pointer;
			margin-top: 28px;
			background: url('./images/facebook.png') no-repeat;
		}	
		.copyText{
			position: absolute;
			left: -9999px;
		}
	}
}