
@themeColor: #2ca5ea;
body{
	background: #f5f5f5;
	min-width: 1275px;
}
@media screen and (max-width:1500px){
	.add-search #searchForm{
		padding-left:0;
	}
}
.firstAnn{
	display: none;
}

.content{
	.add-search{
		background:rgba(11,157,120,0.3)!important ;
	}
	.banner{
		position: relative;
		width:100%;
		height: 400px;
		overflow: hidden;
		.banImg{
			position: absolute;
			left:50%;
			transform: translateX(-50%);
		}
	}
	.wrap{
		width: 100%;
		.container{
			padding:0 40px;
			text-align: left;
			color: #666;
			font-size: 14px;
			.title{
				text-align: center;
				font-size: 36px;
				color: #333;
				line-height: 50px;
				font-style: italic;
				margin-top: 40px;
			}
			.title_1{
				line-height: 25px;
				margin-bottom:15px; 
			}
			.con{
				margin-bottom: 30px;
				.con_title{
					font-size: 18px;
					color: #333;
					line-height: 30px;
				}
			}
			.ul_1{
				width: 100%;
				height: 40px;
				background:#a1d9cb;
				margin-bottom: 5px;
				li{
					float: left;
					height: 40px;
					line-height: 40px;
					font-size: 22px;
					color: white;
					font-weight: 700;
					text-align: center;
				}
			}
			.table_box{
				color: #333;
				margin-bottom: 5px;
				.ul_box{
					width: 830px;
					height: 100px;
					ul{
						border: 1px solid #a1d9cb;
						height: 60px;
						li{
							float: left;
							height: 40px;
							line-height: 60px;
							font-size: 16px;
							text-align: center;
							font-weight: 400;
						}
					}
				}
				.introFare{
					width: 290px;
					height: 120px;
					line-height: 120px;
					font-size: 18px;
					text-align: center;
					border: 1px solid #a1d9cb;
					background: #f1fcf9;
				}
			}
		}
	}
}
