@import "../../../public-resource/less/basedir/_variables.less";
.body{
	background: #f5f5f5;
}
.colorWhite{
  color: #fff;
}
.fontSz26{
  font-size: 26px;
}
.colorDec{
	color: #0b9d78;
	text-decoration: underline;
}
.content{
	position: relative;
	background:url('./images/bg.png') no-repeat;
	background-size: 1920px;
	background-position:top center;
}
.wrap{
	width: 100%;
	.title{
		margin: 40px 0px;
		p{
			height: 120px;
			text-align: center;
			font-size: 34px;
			line-height: 120px;
			color: white;
			font-weight: 700;
		}
	}
	.phoneImg{
		width: 440px;
		height: 517px;
		background: url('./images/phone.png') no-repeat;
		margin: 20px 0px 0px 70px;
	}
	.loadInfo{
		width: 560px;
		margin-right: 70px;
		.title{
			text-align: center;
			color: white;
			font-size: 18px;
			line-height: 22px;
		}
		.mobile-box{	
		width: 100%;
		height: 70px;
		padding: 0px 95px;
			input{
				height: 34px;
			}
		}	
		.loadWay{
			font-size: 12px;
			color: white;
			padding: 0px 60px 0px 100px;
			.loadWayBtn{
				height: 45px;
				margin: 30px 0px 23px;
				a{
					display: inline-block;
					width: 120px;
					height: 36px;
					margin-right: 10px;
					&:nth-child(1){
						background: url('./images/google.png') no-repeat;
						background-size: 100%;
					}
					&:nth-child(2){
						background: url('./images/iponeApp.png') no-repeat;
						background-size: 100%;
					}
				}
			}
			.dimensionalCode{
				width: 121px;
				.dimensionalCodeImg{
					width: 88px;
					height: 88px;
					background: url('./images/cheapFights.png');
					background-size: 100%;
					margin-bottom: 10px;
				}
			}
		}
		.describeInfo{
			padding: 80px 0px 20px;
			border-bottom: 1px solid #BFBFBF;
			margin: 60px 60px 0px;
			p{
				color: #1B2135;
				font-size: 16px;
				line-height: 22px;
			}
		}
	}
}
.Classification{
	padding: 20px 30px;
	.classInfo{
		.classInfo_li{
			&:nth-child(1){
				margin-bottom: 30px;
			}
			ul{
				li{
					font-size: 14px;
					line-height: 20px;
					margin-bottom: 20px;
					list-style: disc;
				}
			}
			.item_left{
				width: 52%;
				padding-right: 75px;
			}
			.item_right{
				width: 48%;
				padding-right: 50px;
			}
			.item_title{
				font-size: 16px;
				line-height: 28px;
				margin-bottom: 20px;
				span{
					display: inline-block;
					width: 140px;
					height: 36px;
					line-height: 38px;
					color: white;
					background: #F55D2D;
					text-align: center;
					font-size: 18px;
					margin-right: 20px;
				}
			}
			.item_2_p{
				font-size: 14px;
				margin-bottom: 20px;
				line-height: 20px;
			}
		}
	}
}
.foot-Info{
	margin: 20px 0px 60px;
	p{
		color: #999999;
		font-size: 14px;
		line-height: 14px;
		text-align: center;
	}
}


