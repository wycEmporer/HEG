@import "../../../public-resource/less/basedir/_variables.less";

@themeColor: #2ca5ea;

.body{
	background: #f5f5f5;
}
.colorWhite{
  color: #fff;
}
.fontSz26{
  font-size: 26px;
}
.wrap{
	padding: 30px 100px 20px;
}
.banner{
	width:100%;
	height:400px;
	overflow: hidden;
	position: relative;
	.banImg{
		position: absolute;
		left:50%;
		transform: translateX(-50%);
	}
}
.line2{
	display: inline-block;
	width:140px;
	height:2px;
	background-color: @themeColor;
}
h1.title{
	font-size: 30px;
}
.summary{
	padding: 20px 0 120px;
	p{
		line-height: 30px;
	}
}
