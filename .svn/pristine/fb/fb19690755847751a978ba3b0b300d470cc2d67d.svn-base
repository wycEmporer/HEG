@import "../../../public-resource/less/basedir/_variables.less";
body{
	background: #ffffff;
}
.banner{
	position: relative;
	width:100%;
	height: 400px;
	overflow: hidden;
	.banImg{
		position: absolute;
		left:50%;
		transform: translateX(-50%);
	}
}
.fontBold{
	font-weight: bold;
}
.container{
	padding: 0px 54px;
}
.marginB{
	margin-bottom: 16px;
}
.content{
	position: relative; 
	// top:-100px;
	p{
		color:@gray-dark;
		font-size: 14px;
	}
}
.side{
	.piece{
		background: #f9fbfb;
		box-shadow: 0px 0px 10px #cccccc;
		margin-bottom: 20px;
	}
	.Process{
		width: 100%;
		margin: 20px 0px;
		// border: 1px solid #ccc;
		padding: 25px;
		background: #f9fbfb;
		box-shadow: 0px 0px 10px #ccc;
		.title{
			height: 40px;
			line-height: 30px;
			font-size: 18px;
			color: #46ab8d;
			padding-left: 20px;
			position: relative;
			&::before{
				content: '';
				position: absolute;
				left: 0px;
				top: 6px;
				width: 5px;
				height: 18px;
				background: #46ab8d;
			}
		}
		.process{
			
			ul{
				li{
					float: left;
					width: 140px;
					height:75px;
					text-align: center;
					padding: 10px;
					display: box;
					box-pack:center;
					box-orient:vertical;
					display: -webkit-box;
					-webkit-box-pack:center;
					-webkit-box-orient:vertical;
					font-size: 16px;
					&:nth-child(odd){
						width: 155px;
						border: 2px dashed #cccccc;
						border-radius: 10px;
					}
					p{
						color: #333;
					}
					span{
						display: inline-block;
						width: 45px;
						height: 25px;
						background: url('./images/cashback_03.jpg') no-repeat;
					}
				}
			}
		}
		.TC{
			margin: 20px 0 10px;
			ul{
				padding-left:15px; 
				li{
					list-style: disc;
					font-size: 14px;
					line-height: 20px;
				}
			}
		}
		.checkCash{
			font-size: 16px;
			line-height: 40px;
			color: #333;
			a{
				text-decoration: underline;
			}
		}
		.cashBook{
			width: 100%;
			height: 225px;
			border: 1px solid #ccc;
			margin-bottom: 20px;
			background: url('./images/cashback5.png') no-repeat;
		}
		.note{
			font-size: 14px;
			color: #333;
		}
	}
	.tabBar{
		
		.nav-tabs{
			&>li>a{
				height: 55px;
				line-height: 35px;
				color: @gray-dark;
				font-size: 14px;
				padding:10px 20px;
			}
		}
		li.active{
			a{
				border:none;
				border-bottom: 3px solid @brand-primary;
				color:@brand-primary;
				background: #f9fbfb;
			}
		}
	}
	.tabcon{
		padding:30px 40px 40px;
		.terms{
			li{
				list-style: disc outside;
			}
		}
		li{
			font-size: 14px;
			color:@gray-dark;
			line-height: 20px;
			margin-bottom: 6px;
			h4{
				font-size: 14px;
				line-height: 30px;
				margin-bottom: 20px;
				&:before{
					content:' ';
					float:left;
					width:30px;
					height:30px;
					margin-right: 10px;
					background:url('./images/cashback_03.png') no-repeat;
				}
			}
			.answer{
				padding:16px 10px;
				border:1px solid @gray-lighter;
				border-radius: 3px;
				margin-bottom: 20px;
			}
		}
	}
}