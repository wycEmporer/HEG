
@themeColor: #2ca5ea;
body{
	background: #F2E9DD;
	min-width: 1275px;
}
@media screen and (max-width:1500px){
	.add-search #searchForm{
		padding-left:0;
	}
}

.content{
	position: relative;
	height: 1400px;
	.banner{
		position: relative;
		width:100%;
		height: 570px;
		overflow: hidden;
		.banImg{
			position: absolute;
			left:50%;
			transform: translateX(-50%);
		}
	}
	.head{
		position: relative;
		.Countdown{
			position: absolute;
			left: 0;
			bottom: 0;
			width: 100%;
			height: 170px;
			background: rgba(0	,0	,0	, 0.5);
			.Countdown_time{
				width: 100%;
				height: 100%;
				color: white;
				text-align: center;
				padding-top: 15px;
				i{
					font-style: inherit;
				}
				.in,.end{
					font-size: 36px;
					height: 80px;
					span{
						font-size: 60px;
					}
				}
				.in{
					line-height: 80px;
				}
				.time{
					font-size: 20px;
				}
			}
		}
	}
	.wrap{
		width: 100%;
		padding: 20px 0px 0px;
		min-width: 1200px;
		position: absolute;
		left: 0;
		top: 530px;
		.container{
			padding: 0px;
			text-align: center;
			.sale_box{
				background: white;
			}
			.sale{
				width: 100%;
				height: 298px;
				margin-bottom: 20px;
			}
			.app_sale{
				position: relative;
				background: url(./images/bg.png) no-repeat;
				.sale_left{
					width: 600px;
					height: 100%;
					padding: 55px 93px 40px 90px;
					text-align: center;
					position: relative;
					.phoneImg{
						width: 118px;
						margin-top: 10px;
						p{
							font-size: 16px;
							color: #666666;
							margin-top: 20px;
						}
					}
					.downLoad{
						p{
							height: 28px;
							margin-bottom: 10px;
							&:nth-child(1){
								text-align: right;
								font-size: 20px;
								color: #000000;
								
								span{
									color: red;
									font-weight: 700;
								}
							}
							&:nth-child(2){
								font-size: 16px;
								color: #151515;
								.copyText{
									margin-top:7px;
								}
								.copyIcon{
									width: 28px;
									height: 28px;
									background: url(./images/copy2.png) no-repeat;
									margin-left: 20px;
								}
							}
							&:nth-child(4){
								font-size: 14px;
								color: #666666;
								letter-spacing: 0;
								text-align: right;
							}
						}
					}
					.code{
						width: 88px;
						height: 88px;
						margin:0px 0px 10px 19px;
						img{
							width: 100%;
						}
					}
					&::after{
						content: '';
						position: absolute;
						right: 0;
						top: 40px;
						width: 0;
						height: 220px;
						border-left: 1px dashed #CDCDCD;
					}
				}
				.sale_right{
					width: 600px;
					height: 100%;
					padding: 55px 40px 40px 40px;
					text-align: center;
					.phoneImg{
						width: 210px;
						margin-top: 45px;
						p{
							font-size: 16px;
							color: #666666;
							margin-top: 20px;
						}
					}
					.downLoad{
						p{
							height: 28px;
							margin-bottom: 10px;
							&:nth-child(1){
								text-align: right;
								font-size: 20px;
								color: #000000;
								span{
									color: red;
									font-weight: 700;
								}
							}
							&:nth-child(2){
								font-size: 16px;
								color: #151515;
								.copyText{
									margin-top:7px;
								}
								.copyIcon{
									width: 28px;
									height: 28px;
									background: url(./images/copy2.png) no-repeat;
									margin-left: 20px;
								}
							}
							&:nth-child(4){
								font-size: 14px;
								color: #666666;
								letter-spacing: 0;
								text-align: right;
							}
						}
					}
					.code{
						width: 88px;
						height: 88px;
						margin:0px 0px 10px 19px;
						img{
							width: 100%;
						}
					}
				}
				.TC{
					position: absolute;
					left: 50%;
					bottom: 10px;
					transform: translateX(-50%);
					font-size: 14px;
					color: #666666;
					&::before{
						content: '';
						position: absolute;
						left: -80px;
						top: 9px;
						width: 60px;
						height: 0;
						border-top: 1px solid #CDCDCD;
					}
					&::after{
						content: '';
						position: absolute;
						right: -80px;
						top: 9px;
						width: 60px;
						height: 0;
						border-top: 1px solid #CDCDCD;
					}
				}
				.TipsMsg{
					position: absolute;
					top: 130px;
					width: 180px;
					padding: 10px;
					font-size: 12px;
					color: white;
					background: rgba(0 , 0, 0, 0.8);
					border-radius: 4px;
					display: none;
				}
				.TipsMsg_1{
					left: 315px;
				}
				.TipsMsg_2{
					right: 50px;
				}
			}
			.slide-box{
				background: white;
				.slide_box{
					width: 100%;
					height: 517px;
					padding: 120px 20px 20px;
					background: url(./images/bg2.png) no-repeat;
					background-position-x: center;
					.title{
						width: 283px;
						margin: auto;
						span{
							color: #ffad3d;
							font-size: 36px;
							margin: 15px 0 0 5px;
							font-style: oblique;
							font-weight: 700;
						}
					}
				}
			}
		
			
			.btn_box{
				.btn{
					width: 220px;
					height: 40px;
					line-height: 28px;
					background: #65290C;
					color: white;
					font-size: 16px;
					border-color: #65290C;
				}
			}
		}
	}
}
