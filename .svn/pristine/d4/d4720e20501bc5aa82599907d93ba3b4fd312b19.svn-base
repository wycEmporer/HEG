
@themeColor: #2ca5ea;
.body{
	background: #f5f5f5;
}
.content{
	.bannerBox{
		display: block;
		width: 100%;
		height: 400px;
		.banner{
			position: relative;
			width: 100%;
			height: 400px;
			overflow: hidden;
			min-width: 1200px;
		}
		img{
			position: absolute;
			left: 50%;
			top: 0;
			transform: translateX(-50%);
			
		}
	}
	.container{
		padding: 0px;
		.wrap{
			width: 100%;
			padding: 0px 100px 100px;
			// height: 1000px;
			font-size: 14px;
			.title{
				line-height: 80px;
				text-align: center;
				font-size: 30px;
			}
			h2{
				line-height: 50px;
				font-size: 24px;
			}
			.megaMS{
				padding-bottom: 30px;
				border-bottom: 1px solid #ccc;
				.megaMS-info{
					p{
						line-height: 24px;
						margin-bottom: 10px;
					}
					
					ul{
						li{
							line-height: 24px;
						}
					}
				}
			}
			.detailsAS{
				.detailsAS-info{
					div{
						padding: 30px 0px;
						border-bottom:1px solid #ccc;
						&:first-child{
							padding: 0px 0px 30px;
						} 
						ul{
							li{
								p{
									line-height: 24px;
									color: #333;
								}
								ul{
									padding-left: 15px;
									li{
										line-height: 24px;
										color: #666;
										list-style: disc;
									}
								}
								&:last-child{
									p{
										font-weight: 700;
									}
								}
							}
						}
					}
				}
			}
			.termsC{
				.termsC-info{
					ul{
						padding-left: 15px;
						li{
							line-height: 30px;
							color: #333;
							list-style: disc;
						}
					}
				}
			}
		}
	}
}
