@import "../../../public-resource/less/basedir/_variables.less";
body{
	background: #f5f5f5;
}
.banner{
	position: relative;
	width:100%;
	// background: url('./images/banner-1920-400.png') no-repeat scroll center 100% / cover;
	height: 400px;
	overflow: hidden;
	.banImg{
		position: absolute;
		left:50%;
		transform: translateX(-50%);
	}
}
.fontBold{
	font-weight: bold;
}
.marginB{
	margin-bottom: 16px;
}
.content{
	position: relative;
	p{
		color:@gray-dark;
		font-size: 14px;
	}
	// top:-100px;
}

.caption{
	background-color: #fff;
	margin-bottom: 20px;
	padding-top: 20px;
	.berif{
		border-bottom: 1px solid @gray-lighter;
		padding: 20px 0;
		li{
			background-color: #fff;
			float:left;
			line-height: 30px;
			width: 25%;
			font-size: 14px;
			&:before{
				content:' ';
				float:left;
				width:56px;
				height:40px;
				margin-right: 10px;
				background-position: center center;
				background-repeat: no-repeat;
			}
			&:nth-child(1){
				&:before{
					background-image: url('./images/icon-calendar.png');
				}
			}
			&:nth-child(2){
				&:before{
					background-image: url('./images/icon-flight.png');
				}
			}
			&:nth-child(3){
				&:before{
					background-image: url('./images/icon-device.png');
				}
			}
			&:nth-child(4){
				&:before{
					background-image: url('./images/icon-clock.png');
				}
			}
		}
	}
	.dec{
		padding:30px 0;
		text-align: center;
		width: 877px;
		margin: auto;
		.title{
			font-size: 20px;
			color: #FFAD3D;
			margin-bottom: 20px;
		}
		.title_3{
			font-size: 16px;
			color: #666666;
			letter-spacing: 0;
			line-height: 24px;
			margin-bottom: 20px;
			text-align: left;
			padding: 0 28px;
		}
		table{
			th,td{
				font-size: 16px;
				color: #333333;
			}
			thead{
				tr{
					th{
						text-align: center;
						height: 90px;
						line-height: 90px;
						border: none;
						&:nth-child(1){
							background: #DCEDC8;
						}
						&:nth-child(2){
							background: #BBDEFB 100%
						}
						&:nth-child(3){
							background: #D1C4E9 100%
						}
					}
				}
			}
			tbody{
				tr{
					th{
						text-align: center;
						vertical-align: middle;
						font-size: 18px;
					}
					td{
						height: 37px;
						vertical-align: middle;
					}
				}
			}
		}
		.title_2{
			font-size: 14px;
			color: #999999;
			text-align: left;
			margin-bottom: 20px;
		}
		.lessHappyGold{
			.title{
				font-size: 18px;
				color: #333333;
				line-height: 50px;
				border-bottom: 1px solid #CDCDCD;
				text-align: left;
				margin: 0;
				span{
					font-size: 22px;
					color: #FFAD3D;
				}
			}
			ul{
				padding: 15px 0;
				text-align: left;
				li{
					margin-bottom: 15px;
					p{
						line-height: 30px;
						&:nth-child(1){
							font-size: 18px;
							color: #333333;
							font-weight: 700;
							position: relative;
							padding-left: 15px;
							&::before{
								content: '';
								position: absolute;
								left: 0px;
								top: 7px;
								width: 0;
								border: 5px solid black;
								border-top: 5px solid transparent;
								border-bottom: 5px solid transparent;
								border-right: 5px solid transparent;
							}
						}
						&:nth-child(2){
							font-size: 16px;
							color: #666666;
						}
					}
				}
			}
		}
		.goRecharge{
			a{
				display: inline-block;
				width: 210px;
				height: 40px;
				padding:8px 12px;
				color:white;
				background: @brand-warning;
				border:1px solid @brand-warning;
				border-radius: 4px;
				font-size: 20px;
			}
		}
	}
}
.side{
	.piece{
		background-color: #fff;
		border:2px solid @gray-lighter;
		margin-bottom: 20px;
		h3{
			color:@brand-primary;
			padding:16px 10px;
			font-size: 16px;
			border-bottom: 1px solid @gray-lighter;
			background-color: #f8f8f8;
		}
	}
	&.left{
		.p-con{
			padding:20px 18px;
			.deals{
				margin-bottom: 20px;
			}
			.btnInline{
				cursor:pointer;
			}
			.offers{
					// padding:0 20px;
				li{
					font-size: 14px;
					padding:16px 0;
					border-bottom: 1px solid @gray-lighter;
					a{
						display: block;
						&:before{
							content: '';
							float: left;
							width: 6px;
							height: 9px;
							margin: 4px 10px 0 0;
							background: url('./images/icon-arrows.png') no-repeat;
						}
					}
				}
			}
		}
	}
	&.right{
		.fore{
			padding:20px;

		}
		.forecon{
			padding: 30px 0 0 0;
			&.getCash{
				padding-left: 20px;
				position: relative;
				// background:url('./images/icon-list.png') no-repeat left center;
				.verticalLine{
					position: absolute;
					width:2px;
					height:380px;
					background: @brand-warning;
					left:44px;
					top:70px;
					z-index: 1;
				}
				li{
					position: relative;
					font-size: 14px;
					margin-bottom: 30px;
					display: table;
					background: #fff;
					z-index: 2;
					span {
						// float:left;
						display: table-cell;
						&.text{
							vertical-align:middle;
							padding-left: 20px;
						}
						&.no{
							width:50px;
							height:50px;
							text-align: center;
							color: @brand-warning;
							line-height: 46px;
							font-size: 24px;
							font-weight: bolder;
							// margin-right: 20px;
							border:2px solid @brand-warning;
							border-radius: 30px;
						}
					}
				}
			}
			&.totalcash{
				p{
					margin-bottom: 8px;
				}
				ul{
					padding-left: 12px;
					li{
						color: @gray-dark;
						font-size: 14px;
						// list-style: disc;
						line-height: 20px;
					}
				}
			}
		}
		ul.title{
			border-bottom: 1px solid @gray-lighter;
			li{
				float: left;
				margin-bottom: -1px;
				p{
					float: left;
					font-size: 14px;
					padding:10px 0;
					border-bottom: 2px solid @brand-primary;
				}
			}
		}
	}
	.tabBar{
		.nav-tabs{
			&>li>a{
				color: @gray-dark;
				font-size: 14px;
			}
		}
		li.active{
			a{
				border:none;
				border-bottom: 2px solid @brand-primary;
				color:@brand-primary;
			}
		}
	}
	.tabcon{
		padding:40px;
		.terms{
			li{
				list-style: disc outside;
			}
		}
		li{
			font-size: 14px;
			color:@gray-dark;
			line-height: 20px;
			margin-bottom: 6px;
			h4{
				font-size: 14px;
				line-height: 30px;
				margin-bottom: 20px;
				&:before{
					content:' ';
					float:left;
					width:29px;
					height:29px;
					margin-right: 10px;
					background:url('./images/icon-faqs.png') no-repeat;
				}
			}
			.answer{
				padding:16px 10px;
				border:1px solid @gray-lighter;
				border-radius: 3px;
				margin-bottom: 20px;
			}
		}
	}
}