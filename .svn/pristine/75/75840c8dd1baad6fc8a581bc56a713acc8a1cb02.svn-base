@import "../../../public-resource/less/basedir/_variables.less";
.section {
  margin-top: 20px;
  .nav {
    height: 46px;
    padding: 16px;
    background-color: #e1f1ee;
    border-radius: 4px;
  }
  .content{
     padding: 40px 60px 40px 0px;
     background-color: #f9fbfb;
  }
  .info{
    padding: 40px;
    h3, p{
      line-height: 18px;
    }
  }
  .noteWrap{
    padding-top: 30px;
    margin-left: -20px;
  }
}
.conRight{
  .sideBan{
    background-color: #f9fbfb;
    padding: 20px 16px;
  }
}
.hotelInfo{
  margin-top: 50px;
  width: 850px;
  ul{
    display: flex;
    li{
      // height: 200px;
      background: #F8FBFB;
      margin-right: 20px;
      flex: 1;
      &:last-child{
        margin-right: 0px;
      }
      a{
        display: inline-block;
        width: 100%;
        height: 100%;
        &:hover{
          color: #333333;
        }
      }
      img{
        width: 100%;
        // height: 200px;
      }
      .info{
        padding: 10px;
        p{
          &:nth-child(1){
            font-size: 16px;
            line-height: 24px;
          }
          &:nth-child(2){
            text-align: right;
            span{
              font-size: 20px;
              color: #DC2323;
              line-height: 30px;
              font-weight: 900;
              span{
                font-size: 16px;
              }
            }
          }
        }
      }
    }
  }
}

.lessHappyGold{
  margin-top: 40px;
  width: 850px;
  .title{
    font-size: 18px;
    color: #333333;
    line-height: 50px;
    border-bottom: 1px solid #CDCDCD;
    text-align: left;
    margin: 0;
    span{
      font-size: 30px;
      color: #d7a328;
      font-style: italic;
    }
  }
  ul{
    padding: 15px 0;
    text-align: left;
    li{
      margin-bottom: 15px;
      p{
        line-height: 30px;
        &:nth-child(1){
          font-size: 18px;
          color: #333333;
          font-weight: 700;
          position: relative;
          padding-left: 15px;
          &::before{
            content: '';
            position: absolute;
            left: 0px;
            top: 7px;
            width: 0;
            border: 5px solid black;
            border-top: 5px solid transparent;
            border-bottom: 5px solid transparent;
            border-right: 5px solid transparent;
          }
        }
        &:nth-child(2){
          font-size: 16px;
          color: #666666;
        }
      }
    }
  }
  .goRecharge{
    text-align: center;
    a{
      display: inline-block;
      width: 210px;
      height: 40px;
      padding:8px 12px;
      color:white;
      background: @brand-warning;
      border:1px solid @brand-warning;
      border-radius: 4px;
      font-size: 20px;
    }
  }
}

.lotteryModal{
  background: rgba(0, 0, 0, 0.6);
  .modal-dialog{
    width: 600px;
    height: 415px;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%)!important;
    margin: 0;
  }
  .modal-content{
    border: none;
    box-shadow: none;
    background: transparent;
    .modal-header{
      border: none;
      padding: 0px;
      .close{
        display: inline-block;
        width: 29px;
        height: 29px;
        background: url('./images/close.png') no-repeat;
        background-size: 100%;
      }
    }
    
    .modal-body{ 
      padding: 0px;
      text-align: center;
      .title{
        margin: 0 auto 30px;
        width: 500px;
        height: 29px;
        background: url('./images/title.png') no-repeat;
        background-size: 100%;
      }
      .img{
        width: 478px;
        height: 273px;
        background: url('./images/img.png') no-repeat;
        background-size: 100%;
        margin: auto;
      }
      .btn{
        margin: 50px 0px 0px;
        width: 260px;
        height: 40px;      
        background: url('./images/btn.png') no-repeat;
        background-size: 100%;
      }
    }
  }
}
.prizeModal{
	.modal-dialog{
		width: 680px;
		height: 440px;
		position: absolute;
    left: 50%;
    top: 50%;
		transform: translate(-50%,-50%)!important;
		margin: 0px;
		.modal-content{
			width: 100%;
			height: 100%;
			text-align: center;
      color: #333333;
      border: none;
			.modal-header{
				height: 240px;
				padding: 0px;
				position: relative;
        border: none;
        background: url(./images/model_bg.png) no-repeat;
				.close{
					width: 29px;
					height: 29px;
					background: url('./images/close2.png') no-repeat;
					position: absolute;
					right: 10px;
					top: 10px;
        }
        .info{
          p{
            margin: auto;
            font-size: 24px;
            color: #FFFFFF;
            line-height: 36px;
            &:nth-child(1){
              width: 240px;
              height: 40px;
              line-height: 40px;
              font-size: 30px;
              // color: #0A7DE0;
              background: #FA6C26;
              border-radius: 30px;
              margin: 33px auto 22px;
            }
          }
        }
			
			}
			.modal-body{
				// padding:30px 0 0 0;
        height: 198px;
        position: relative;
				.title{
          font-size: 24px;
          color: #666666;
          position: relative;
          margin-bottom: 30px;
          &::before{
            content: '';
            position: absolute;
            left: 150px;
            top: 16px;
            width: 90px;
            height: 0;
            border-bottom: 1px solid #666666;
          }
          &::after{
            content: '';
            position: absolute;
            right: 150px;
            top: 16px;
            width: 90px;
            height: 0;
            border-bottom: 1px solid #666666;
          }
        }
        ul{
          display: flex;
          li{
            flex: 1;
            text-align: center;
            font-size: 16px;
            img{
              margin-bottom: 20px;
            }
            .copyText{
              position: absolute;
              left: 99999px;
              top: 0;
            }
          }
        }
        .TipsMsg{
          position: absolute;
          right: 30px;
          top: 145px;
          width: 180px;
          padding: 10px;
          font-size: 12px;
          color: white;
          background: rgba(0 , 0, 0, 0.8);
          border-radius: 4px;
          display: none;
        }
			}
		}
	}
}