.navbar{
  box-sizing: border-box;
  background: @brand-primary;
  border:none;
  margin-bottom: 0;
  border-radius: 0;
  .item-wrap li{
    min-width:110px;
    float: left;
    position:relative;
  }
  .tips{
    position: absolute;
    top:-16px;
    left:35px;
    width:233px;
    height:26px;
    color:#fff;
    text-align: center;
    border-radius: 2px;
    background: @brand-warning;
    font-weight: bold;
    z-index: 100;
    &:before{
      content: '';
      border-left: 6px solid transparent;
      border-bottom: 6px solid transparent;
      border-right: 6px solid transparent;
      border-top: 4px solid @brand-warning;
      position: absolute;
      bottom: -10px;
      left: 24px;
    }
  }   
  .item {
    display:block;
    box-sizing: border-box;
    width:100%;
    height:50px;
    text-align: left;
    color:#fff;
    line-height:50px;
    background-repeat: no-repeat;
    background-position:6px 8px;
    .text{
      display:block;
      padding-right: 10px;
      overflow: hidden;
    }
    &::before{
      content:' ';
      float:left;
      width:32px;
      height:30px;
      margin: 10px 8px 0 10px;
      background-repeat: no-repeat;
      background-position: center;
    }
    &.flight{
      &::before{
        background-image: url(../image/icon-f.png);
      }
    }
    &.wallet{
      &::before{
        background-image: url(../image/icon-w.png);
      }
    }
    &.coupon::before{
      background-image: url(../image/icon-c.png);
    }
    &.cross{
      &::before{
        background-image: url(../image/title.png);
      }
    }
    &:hover{
      &.flight::before{
        background-image: url(../image/icon-f-hover.png)
      }
      &.wallet::before{
        background-image: url(../image/icon-w-hover.png); 
      }
      &.coupon::before{
        background-image: url(../image/icon-c-hover.png); 
      }
      background-color: #fff;
      color:#666;
    }
    .fa-2x{
      vertical-align: -15%;
    }
  }
  .Lmainmenu{
    &>li{
      float:left;
      height:50px;
      line-height: 50px;
      color:#fff;    
    }
    .logIn,.register{
      font-size: 14px;
      padding:0 10px;
      text-align: center;
      a{
        color:#fff;
      }
    }
    .yours{
      width:180px;
      padding:0 10px;
      position:relative;
      z-index: 1000;
      &:hover{
        background-color: @brand-warning;
      }
      .fa-sort-down{
        vertical-align: 0;
      }
      .menu-text{
        width:120px;
        height: 50px;
        font-size:14px;
        display: inline-block;
        vertical-align: middle;
        padding:0 4px;
        overflow: hidden;
      }
      &:hover,&.active{
        .tools{
          display: block;
        }
      }
      .tools{
        display: none;
        position:absolute;
        width:180px;
        right:0px;
        top:50px;
        background-color: #fff;
        z-index: 5;
        box-shadow: 0 3px 5px #bbb;
        .fore{
          display: block;
          width:100%;
          height:32px;
          padding-left:10px;
          color:@gray-base;
          line-height: 32px;
          &:hover{
            color:@brand-warning;
            i.icon.trips{
              background-image: url(../image/icon-trip2.png);
            }
            i.icon.profile{
              background-image: url(../image/icon-profile2.png);
            }
            i.icon.traveller{
              background-image: url(../image/icon-traveler2.png);
            }
            i.icon.wallet{
              background-image: url(../image/icon-happyeasycash2.png);
            }        
            i.icon.print{
              background-image: url(../image/icon-printticket2.png);
            }   
            i.icon.cancel{
              background-image: url(../image/icon-cancellation2.png);
            }
            i.icon.security{
              background-image: url(../image/icon-security2.png);
            }
            i.icon.refer{
              background-image: url(../image/icon-refer2.png);
            }
            i.icon.sign-in{
              background-image: url(../image/signin-hover.png);
            }
            i.icon.sign-up{
              background-image: url(../image/signup-hover.png);
            }
          }
          &:not(:first-child){
            border-top: 1px solid #eee;
          }
          i.icon{
            width:25px;
            height:25px;
            float:left;
            background-repeat: no-repeat;
            margin-right:20px;
            margin-top:5px;
          }
          i.icon.trips{
            background-image: url(../image/icon-trip1.png);
          }
          i.icon.profile{
            background-image: url(../image/icon-profile1.png);
          }
          i.icon.traveller{
            background-image: url(../image/icon-traveler1.png);
          }
          i.icon.wallet{
            background-image: url(../image/icon-happyeasycash1.png);
          }     
          i.icon.print{
            background-image: url(../image/icon-printticket1.png);
          }
          i.icon.security{
            background-image: url(../image/icon-security1.png);
          }
          i.icon.cancel{
            background-image: url(../image/icon-cancellation1.png);
          }
          i.icon.refer{
            background-image: url(../image/icon-refer1.png);
          }
          i.icon.sign-in{
            background-image: url(../image/signin.png);
          }
          i.icon.sign-up{
            background-image: url(../image/signup.png);
          }
        }
      }
    }
    .support{
      width:98px;
      padding:0 10px;
      position:relative;
      &:hover{
        background-color:@brand-warning;
      }
      .fa-sort-down{
        vertical-align: 0;
      }
      .supportText{
        width:56px;
        height: 50px;
        display: inline-block;
        vertical-align: middle;
        padding:0 4px;
        font-size: 14px;
        overflow: hidden;
      }
      &:hover{
        .tools{
          display: block;
        }
      }
      .tools{
        display: none;
        position:absolute;
        width:180px;
        left:0px;
        top:50px;
        background-color: #fff;
        z-index: 5;
        box-shadow: 0 3px 5px #bbb;
        .fore{
          display: block;
          width:100%;
          height:32px;
          padding-left:10px;
          color:@gray;
          line-height: 32px;
          &:hover{
            color:@brand-warning;
          }
          &:not(:first-child){
            border-top: 1px solid #eee;
          }
          i{
            margin-right:10px;
          }
        }
      }
    }
  }
}
  