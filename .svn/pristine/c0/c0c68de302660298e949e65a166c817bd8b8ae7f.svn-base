@import "../../../../public-resource/less/basedir/_variables.less";
body{
	background: #f5f5f5;
}
.bannerBox{
  position: relative;
  .banner{
    width:100%;
    height:400px;
    overflow: hidden;
    position: relative;
    min-width: 1200px;
    .banImg{
      position: absolute;
      left:50%;
      transform: translateX(-50%);
    }
  }
  .copyCode{
    position: absolute;
    right: 50%;
    bottom: 64px;
    transform: translateX(50%);
    p{
      font-size: 30px;
      color: white;
      
      line-height: 60px;	
      span{
        &:nth-child(1){
          line-height: 60px;	
        }
        &:nth-child(2){
          display: inline-block;
          width: 142px;
          height: 59px;
          line-height: 60px;
          background: url(./images/code.png) no-repeat;
          padding: 8px 17px;
          font-weight: 700;
          cursor: pointer;
        }		
      }
    }
    .TipsMsg{
      position: absolute;
      top: 70px;
      left: 175px;
      width: 180px;
      padding: 10px;
      font-size: 12px;
      color: white;
      background: rgba(0 , 0, 0, 0.8);
      border-radius: 4px;
      display: none;
    }
  }
}

.textCen{
	text-align: center;
}
.content{
	position: relative;
}
.borderB{
	border-bottom: 1px solid @gray-lighter;
}
.fontB{
	font-weight: bold;
}
.container{
	.wrap{
		width: 100%;
		padding: 0 20px;
		text-align: center;
		.category{
			ul{
				width: 100%;
				height: 100px;
				margin:  30px 0 40px;
				li{
					float: left;
					width: 25%;
					height: 100%;
					p{
						&:nth-child(2){
							font-size: 20px;
							color: #333333;
							font-weight: 700;
						}
						&:nth-child(3){
							font-size: 16px;
							color: #333333;
						}
					}
				}
			}
		}
		.otherRules{
			margin: 20px 0;
			text-align: left;
			.tabBar{
				.nav-tabs{
					border: none;
					&>li{
						padding: 0px 15px;
					}
					&>li>a{
						font-size: 16px;
						color: #999999;
						padding: 0;
						line-height: 35px;
          }
         
				}
				li.active{
					a{
						border:none;
						border-bottom: 3px solid #ED8649;
						font-size: 18px;
						color: #333333;
						background: none;
						font-weight: 700;
					}
				}
			}
			.tabcon{
				padding:30px 0px;
				ul{
					padding-left: 15px;
				}
				li,p{
					list-style: disc outside;
					line-height: 24px;
					margin-bottom: 10px;
					font-size: 16px;
					color: #333333;
					
				}
				
			}
		}
	}

 
}
.content{
  .selector-container {
    padding-top: 14px;
  }
  
}



